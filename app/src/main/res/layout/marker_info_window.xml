<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bg">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="216dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kommentar"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/commentText"
            android:layout_marginEnd="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/commentText"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Flaske mÃ¦ngde"
            android:id="@+id/textView8"
            android:textColor="#ffffff"
            android:layout_below="@+id/commentText"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/bagCountText"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Afstand"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:layout_below="@+id/bagCountText"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/distanceText"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView4"
            android:layout_above="@+id/commentText"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/distanceText"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/googleMapBtn"
            android:background="@null"
            android:src="@drawable/travel_1"
            android:layout_below="@+id/textView9"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Find rute"
            android:id="@+id/textView11"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/googleMapBtn"
            android:layout_alignStart="@+id/googleMapBtn"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
</ScrollView>