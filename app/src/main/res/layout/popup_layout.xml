<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bg"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.06">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonCreate"
            android:background="@mipmap/testlogo"
            android:onClick="Khaled"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Opret opsamlingsted:\nUdfyld venligst felterne"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/imageButtonCreate"
            android:layout_alignStart="@+id/btnBottle2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Skriv en kommentar:"
            android:id="@+id/textView5"
            android:textColor="#ffffff"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/imageButtonCreate"
            android:layout_alignStart="@+id/imageButtonCreate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userComment"
            android:layout_below="@+id/textView5"
            android:textColor="#040404"
            android:layout_alignParentStart="true"
            android:hint="(valgfri)"
            android:enabled="true"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_alignEnd="@+id/textView3"
            android:editable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vælg flaske mængde:"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/userComment"
            android:layout_alignEnd="@+id/textView5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottle1"
            android:background="@mipmap/testlogo"
            android:onClick="Khaled"
            android:src="@drawable/number1icon"
            android:layout_weight="0.05"
            android:layout_marginStart="21dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottle2"
            android:background="@mipmap/testlogo"
            android:onClick="Khaled"
            android:src="@drawable/number2icon"
            android:layout_weight="0.05"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/btnBottle1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottle3"
            android:background="@mipmap/testlogo"
            android:onClick="Khaled"
            android:src="@drawable/number3icon"
            android:layout_weight="0.05"
            android:layout_alignTop="@+id/btnBottle2"
            android:layout_toEndOf="@+id/btnBottle2" />

    </RelativeLayout>

</LinearLayout>

