<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@color/colorPrimary"
    tools:context="com.patrick.refundly.controllers.CollectorApplication">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:id="@+id/imageSlogan"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Bliv opsamler!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/collectorapplytext"/>

    <EditText
        android:layout_width="200dp"
        android:inputType="phone"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGreen"
        android:id="@+id/applyPhoneEditText"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Videre"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_btn"
        android:id="@+id/applyCollectorBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorRed"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:id="@+id/applyPhoneErrorTextView"
        android:text="Fejl i indtastning af telefonnummer"/>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>


</LinearLayout>
